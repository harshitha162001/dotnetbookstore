@page
@model BulkyWebRezorproject.Pages.Categories.IndexModel
<h1>Category List</h1>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class=" col-6 ">
            <h2 class="text-primary">
                Category List
            </h2>

        </div>
       
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary"><i class="bi bi-plus-square"></i> Create new category</a>

        </div>

    </div>


  <table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            DisplayOrder
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder)){
        <tr>
            <tr>
               <td>@obj.Name</td>
               <td>@obj.DisplayOrder</td>
               <td><div class="w-75 btn-group" role="group">
                            <a asp-page="/categories/edit"  asp-route-id="@obj.Id" class="btn btn-info mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Delete</a>

               </div></td>
            </tr>
        </tr>
        }
    </tbody>
   </table>
</div>